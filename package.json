{
  "name": "snip-notes",
  "displayName": "Snip Notes",
  "description": "Create notes tied directly to their code snippets.",
  "publisher": "gziz",
  "repository": "https://github.com/gziz/snip-notes.git",
  "version": "0.0.1",
  "icon": "resources/snip-notes.png",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snipNotes",
          "title": "Snip Notes",
          "icon": "resources/icons/snip-notes.svg"
        }
      ]
    },
    "views": {
      "snipNotes": [
        {
          "type": "webview",
          "id": "snipNotes.webView",
          "name": "Notes"
        },
        {
          "id": "snipNotes.treeView",
          "name": "Tree Notes"
        }
      ]
    },
    "menus": {
      "webview/context": [
        {
          "command": "snip-notes.deleteNote",
          "when": "webviewId == 'snipNotes.webView' && webviewSection == 'noteContainer'",
          "group": "noteCRUD"
        },
        {
          "command": "snip-notes.updateNoteCategoryToNote",
          "when": "webviewId == 'snipNotes.webView' && webviewSection == 'noteContainer'",
          "group": "noteCategories"
        },
        {
          "command": "snip-notes.updateNoteCategoryToTodo",
          "when": "webviewId == 'snipNotes.webView' && webviewSection == 'noteContainer'",
          "group": "noteCategories"
        },
        {
          "command": "snip-notes.updateNoteCategoryToFix",
          "when": "webviewId == 'snipNotes.webView' && webviewSection == 'noteContainer'",
          "group": "noteCategories"
        }
      ],
      "commandPalette": [
        {
          "command": "snip-notes.deleteNote",
          "when": "false"
        },
        {
          "command": "snip-notes.refreshNotes",
          "when": "false"
        }
      ]
    },
    "commands": [
      {
        "command": "snip-notes.createNote",
        "title": "Snip Notes: Create Note"
      },
      {
        "command": "snip-notes.deleteNote",
        "title": "Delete Note"
      },
      {
        "command": "snip-notes.refreshNotes",
        "title": "Refresh Notes"
      },
      {
        "command": "snip-notes.updateNoteCategoryToNote",
        "title": "Set as Note ðŸ’¡"
      },
      {
        "command": "snip-notes.updateNoteCategoryToTodo",
        "title": "Set as TO-DO âœ…"
      },
      {
        "command": "snip-notes.updateNoteCategoryToFix",
        "title": "Set as Fix Me ðŸ”§"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.81.0",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "sql.js": "^1.8.0"
  }
}
